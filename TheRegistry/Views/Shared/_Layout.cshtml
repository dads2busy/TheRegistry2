<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Virginia Early Child Care Professional Development Registry</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/tinymce")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>
    <header id="header">
        <div class="site-title">@Html.ActionLink("Virginia Early Childhood Professional Development Registry", "Index", "Home", new { area = "" }, null)</div>
        <section id="login">
            @Html.Partial("_LoginPartial")
        </section>
        <div id="topnav">
            <nav>
                <ul class="menu">
                @if (Request.IsAuthenticated && User.IsInRole("CareProvider")) {
                <li>@Html.ActionLink("Application", "Edit", "Response", new { area = "", id = 1 }, null)</li>
                <li>@Html.ActionLink("Submit", "Verification", "Verification", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Status", "Status", "CareProvider", new { area = "" }, null)</li>
                <li>@Html.ActionLink("My IMPACT", "Download", "Response", new { area = "" }, null)</li>
                <li>|</li>
                }
                @if (Request.IsAuthenticated && User.IsInRole("Admin")) {
                <li>@Html.ActionLink("App Settings", "Index", "AppSetting", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Reports", "Index", "AppData", new { area = "" }, null)</li>
                <li>|</li>
                <li>@Html.ActionLink("Questionnaire", "Edit", "Questionnaire", new { area = "", id = 1 }, null)</li>
                <li>@Html.ActionLink("Sections", "Index", "QCategory", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Questions", "Index", "Question", new { area = "" }, null)</li>
                <li>|</li>
                <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
                <li>|</li>
                }
                @if (Request.IsAuthenticated && (User.IsInRole("Verifier") || User.IsInRole("Admin")))
                {
                <li>@Html.ActionLink("Verifications", "Index", "Verification", new { area = "" }, null)</li>
                }
                <li>@Html.ActionLink("Resources", "Index", "Info", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)</li>
            </ul>
        </nav>
        </div>
    </header>

    <div id="body">
    @RenderSection("featured", required: false)
    @*<section class="content-wrapper main-content clear-fix">*@
    @RenderBody()
    @*</section>*@


    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
            </div>
        </div>
    </footer>


    @Scripts.Render("~/bundles/jqueryui")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @Styles.Render("~/Content/themes/start/css")
    @RenderSection("scripts", required: false)
</body>
</html>
